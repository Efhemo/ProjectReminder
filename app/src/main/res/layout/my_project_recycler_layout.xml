<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dimen_8"
    android:id="@+id/container_cardView"
    app:cardElevation="@dimen/dimen_8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_contain"
            android:layout_width="@dimen/dimen_67dp"
            android:layout_height="@dimen/dimen_68dp"
            android:layout_margin="@dimen/dimen_12"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="H"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorPrimaryInverse"
            android:textSize="@dimen/text_size_36"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_marginTop="@dimen/dimen_4"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/tv_contain"
            app:layout_constraintTop_toTopOf="@id/tv_contain"
            tools:text="Project Name" />

        <TextView
            android:id="@+id/tv_projectDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:padding="@dimen/dimen_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintLeft_toRightOf="@id/tv_contain"
            app:layout_constraintTop_toBottomOf="@id/tv_projectName"
            tools:text="A Nanodegree Final Project"
            android:maxLines="2"
            android:ellipsize="end"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>